<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:background="@color/bg_register"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/profileTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/profile"
                android:textColor="@color/greenButton"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/editProfile"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:src="@drawable/edit_profile" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/imageDetails"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@id/toolbar"
            android:layout_centerHorizontal="true"
            android:padding="5dp"
            android:src="@drawable/movies" />

        <TextView
            android:id="@+id/profileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageDetails"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:textColor="@color/white"
            android:textSize="22sp"
            tools:text="Schoxara96" />

        <TextView
            android:id="@+id/profileEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profileName"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:textColor="@color/white"
            android:textSize="22sp"
            tools:text="email@email.com" />

        <EditText
            android:id="@+id/aboutMe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/profileEmail"
            android:layout_margin="20dp"
            android:hint="@string/aboutMe"
            android:minLines="3"
            android:textColor="@color/white"
            android:textColorHint="@color/hint_gray"
            android:textSize="19sp" />

        <EditText
            android:id="@+id/profileMoviesDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/aboutMe"
            android:layout_margin="20dp"
            android:hint="@string/moviesDescription"
            android:minLines="3"
            android:textColor="@color/white"
            android:textColorHint="@color/hint_gray"
            android:textSize="19sp" />

        <Button
            android:id="@+id/saveProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profileMoviesDescription"
            android:layout_centerHorizontal="true"
            android:background="@color/greenButton"
            android:text="@string/save"
            android:textColor="@color/white"
            android:visibility="gone" />
    </RelativeLayout>
</ScrollView>